@using MvcCV.Models.Entity
@model List<TblSkills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "";
    string labelcolor = "";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .progress-bar.bg-warming {
            background-color: #ffc107;
        }

        .badge.bg-warming {
            background-color: #ffc107;
            color: white;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .btn-info, .btn-danger {
            font-size: 0.9rem;
            padding: 5px 10px;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h3 class="card-title">Skill List</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Skill/yeniskill/" class="btn btn-info mb-3">Add New Skill</a>
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Skill</th>
                                            <th>Degree</th>
                                            <th style="width: 40px">Ratio</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.ratio >= 0 && item.ratio <= 50)
                                            {
                                                color = "progress-bar bg-danger";
                                                labelcolor = "badge bg-danger";
                                            }
                                            if (item.ratio > 50 && item.ratio <= 70)
                                            {
                                                color = "progress-bar bg-warming";
                                                labelcolor = "badge bg-warming";
                                            }
                                            if (item.ratio > 70 && item.ratio <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                                labelcolor = "badge bg-primary";
                                            }
                                            if (item.ratio > 84 && item.ratio <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                                labelcolor = "badge bg-success";
                                            }

                                            <tr>
                                                <td>@item.id</td>
                                                <td>@item.skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width:@item.ratio%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelcolor">% @item.ratio</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="#">
                                                        <i class="fas fa-pencil-alt"></i> Update
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@item.id">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>
