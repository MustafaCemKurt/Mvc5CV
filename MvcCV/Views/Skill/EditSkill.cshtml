@model MvcCV.Models.Entity.TblSkills

@{
    ViewBag.Title = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditSkill</h2>

<style>
    body {
        background-color: #B0A8B9; /* Daha koyu gri arka plan rengi */
        color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .container {
        background-color: #ffffff; /* Beyaz arka plan rengi */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin: auto;
        margin-top: 50px;
    }

    .form-container {
        background-color: #f8f9fa; /* Açık gri arka plan rengi */
        padding: 20px;
        border-radius: 8px;
    }

    .form-label {
        font-weight: bold;
        margin-top: 15px;
        color: #343a40;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .btn-update {
        font-size: 1.2em;
        padding: 12px 25px;
        margin-top: 20px;
        background-color: #28a745;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn-update:hover {
            background-color: #218838;
        }

    .header {
        margin-bottom: 40px;
    }

        .header h2 {
            font-size: 2em;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 1.2em;
            color: #6c757d;
        }
</style>

<div class="container">
    <div class="header text-center">
        <h2>New Skill Add Page</h2>
        <p>Fill in the form below to add a new skill to your profile.</p>
    </div>

    <div class="form-container">
        <form method="post">
            <div class="form-group">
                @Html.Label("Skill  :", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.skill, new { @class = "form-control", placeholder = "Enter skill name" })
            </div>
            <div class="form-group">
                @Html.Label("Experience Ratio (%) :", new { @class = "form-label" })
                @Html.TextBoxFor(x => x.ratio, new { @class = "form-control", placeholder = "Enter experience ratio" })
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-update">Update</button>
            </div>
        </form>
    </div>
</div>


