@model MvcCV.Models.Entity.TblCertificiates
@{
    ViewBag.Title = "Update Certificates";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background-color: #f0f2f5;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 50px auto;
    }

    .header {
        text-align: center;
        margin-bottom: 30px;
    }

        .header h2 {
            color: #2c3e50;
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .header p {
            color: #7f8c8d;
            font-size: 1.1em;
        }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #34495e;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #bdc3c7;
        border-radius: 8px;
        font-size: 1em;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.25);
            outline: none;
        }

    .btn {
        font-size: 1.1em;
        padding: 12px 25px;
        border-radius: 8px;
        transition: all 0.3s;
        cursor: pointer;
    }

    .btn-success {
        background-color: #2ecc71;
        border: none;
        color: white;
    }

        .btn-success:hover {
            background-color: #27ae60;
        }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }
</style>

<div class="container">
    <div class="header">
        <h2>Update Certificates</h2>
        <p>Enhance your profile by updating your certificates</p>
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(x => x.organizator, "Organizer:", new { @class = "form-label" })
            @Html.TextBoxFor(x => x.organizator, new { @class = "form-control", placeholder = "Enter the organizer company" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.comment, "Comment:", new { @class = "form-label" })
            @Html.TextAreaFor(x => x.comment, new { @class = "form-control", rows = "3", placeholder = "Enter your experience or comments" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.date, "Date:", new { @class = "form-label" })
            @Html.TextBoxFor(x => x.date, new { @class = "form-control", type = "date" })
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-success">Update Certificate</button>
            <a href="/Certificate/DeleteCerti/@ViewBag.d" class="btn btn-danger">Delete Certificate</a>
        </div>
    }
</div>